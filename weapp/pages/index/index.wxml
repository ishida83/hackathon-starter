<view class="content">
    <view class="left">
        <block wx:for="{{imgList}}" wx:key="{{item.path}}">
            <template is="item" data="{{item}}" wx:if="{{index%2==0 && index>2}}"></template>
        </block>
    </view>
    <view class="right">
        <block wx:for="{{imgList}}" wx:key="{{item.path}}">
            <template is="item" data="{{item}}" wx:if="{{index%2==1 && index>2}}"></template>
        </block>
    </view>
</view>
