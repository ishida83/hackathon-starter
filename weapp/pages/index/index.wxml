<template name="item">
    <view class="flex-wrap">
        <image mode="widthFix" src="{{item.path}}" bindtap="openDetail" lazy-load="true" data-index="{{item.id}}"></image>
        <view class="favorite-icon-count">{{item.count}}</view>
        <view class="favorite-icon  {{item.favorite?'favorite-icon-active':''}}" bindtap="favoriteEvents" data-id="{{item.id}}"></view>
    </view>
</template>

